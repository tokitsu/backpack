<%= render 'shared/error_messages'%>
<div class="p-comment__formBox">
  <p class="p-comment__formTitle">コメント記入</p>
  <%= form_with model: @comment, local:false do |f| %>
    <%= f.hidden_field :board_id %>
    <div class="form-group">
      <%= f.label :comment, 'コメント' %>
      <%= f.text_area :comment, class: 'form-control', id: 'comment_field', rows: 4 %>
    </div>
    <%= f.submit '送信', class: 'btn btn-outline-secondary' %>
  <% end %>
</div>
