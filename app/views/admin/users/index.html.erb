<h2>ユーザー管理画面</h2>
<%= link_to '新規ユーザー作成', new_admin_user_path %>
<% @users.each do |user| %>
      <div class="item">
        <%= link_to user.name, user %>
        <%= link_to 'メッセージ', conversations_path(sender_id: @current_user.id, recipient_id: user.id), method: :post %>
        <%= link_to '削除', admin_user_path(user), method: :delete, data: {confirm: '削除してよろしいですか？'} %>
        <%= user.admin %>
      </div>
<% end %>
