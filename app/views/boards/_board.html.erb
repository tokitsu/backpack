<div class="card">
  <div class="card-header">
    <h4><%= @board.title %></h4>
    <% @board.tags.each do |tag| %>
      <span class ="badge badge-primary"><%= tag.name %></span>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(@board.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= @board.user.name %></p>
    <p class="card-left">
      <% if @board.images.attached? %>
        <% @board.images.each do |image| %>
          <%= image_tag(image, width:435) %>
        <% end %>
      <% end %>
    </p>
  </div>
</div>
